
{% extends 'base.html.twig' %}

{% block title %}Colis index{% endblock %}

{% block body %}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<h1>Colis index</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Prix</th>
                <th>Poid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for coli in colis  %}
            <tr>
                <td>{{ coli.id }}</td>
                <td>{{ coli.reference }}</td>
                <td>{{ coli.prix }}</td>
                <td>{{ coli.poid }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_colis_show', {'id': coli.id}) }}">Show</a>
                    <a class="btn btn-primary" href="{{ path('app_colis_edit', {'id': coli.id}) }}">Edit</a>
                    <button class="btn btn-primary">Button 3</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_colis_new') }}">Create new</a>
</div>

{% endblock %}
